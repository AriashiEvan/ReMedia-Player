<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/exo_controller">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <ImageButton
                android:id="@+id/back_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_arrow_back_24"
                app:tint="#03A9F4"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/File_name"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:hint="This is the file name"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/player_controls"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            >

            <ImageButton
                android:id="@+id/exo_prev"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/controls_previous"
                android:background="@android:color/transparent"
                app:tint="#03A9F4"
                tools:ignore="DuplicateIds"
                android:layout_margin="20dp"/>

            <ImageButton
                android:id="@+id/exo_rew"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/controls_rewind"
                android:background="@android:color/transparent"
                app:tint="#03A9F4"
                android:layout_margin="20dp"/>

            <ImageButton
                android:id="@+id/exo_play_pause"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/controls_play"
                android:background="@android:color/transparent"
                app:tint="#03A9F4"
                android:layout_margin="20dp"
                />

            <ImageButton
                android:id="@+id/exo_ffwd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/controls_fast_forward"
                android:background="@android:color/transparent"
                app:tint="#03A9F4"
                android:layout_margin="20dp"/>

            <ImageButton
                android:id="@+id/exo_next"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/controls_next"
                android:background="@android:color/transparent"
                app:tint="#03A9F4"
                android:layout_margin="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/default_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/bottom_controls"
            >

            <TextView
                android:id="@+id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                />

            <androidx.media3.ui.DefaultTimeBar
                android:id="@+id/exo_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:unplayed_color="#575353"
                app:played_color="#03A9F4"
                app:scrubber_color="@color/white"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/bottom_controls"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="end"
            >

            <ImageButton
                android:id="@+id/exo_pip"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/outline_back_to_tab_24"
                android:background="@android:color/transparent"
                app:tint="@color/white"/>

            <ImageButton
                android:id="@+id/fullscreen"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/controls_fullscreen"
                android:background="@android:color/transparent"
                app:tint="@color/white"/>

            <ImageButton
                android:id="@+id/exo_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/baseline_settings_24"
                android:background="@android:color/transparent"
                app:tint="@color/white"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>